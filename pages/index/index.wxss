@import "/static/icons/iconfont.wxss";
.top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  top:0;
  position:sticky;
  z-index: 999;
  width: 100%;
  height: 40px;
  background-color: red;
}
.left input{
  position:absolute;
  left: 45px;
  top:5px;
  /* margin-left: 20px; */
  width: 70%;
  height: 30px;
  background-color: white;
  
}
.left icon{
  position:absolute;
  left: 20px;
  top:5px;
  height: 30px;
  background-color: white;
  font-size: 25px;
}
.my{
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.my image{
    position:absolute;
    width: 33px;
    color: white;
    top: -10px;
    right: 5px;
    height: 25px;
}
.my text{
  color: white;
  font-size: 12px;
}
/* .bgm{
  position:absolute;
  top: 0px;
  right: 20px;
} */
.item{
  display: flex;
  margin: 10px 0;
  justify-content: space-around;
  border-bottom: 1px solid gray;
}
.item image{
  background-color: white;
  width: 120px;
  height: 110px;
}
.item icon{
  font-size: 25px;
  color:red
}
.item-right{
  display: flex;
  margin-left: -20px;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-between;
}
.item-right text:nth-child(1){
  font-size: 20px;
}
.item-right text:nth-child(2){
  color: red;
}
.item-right text:last-child{
  font-size: 10px;
  color: gray;
}
.pl{
    width: 100%;
  position:relative
}
.pl icon{
  position: absolute;
  right: -6.5px;
  top:-10px;
  font-size: 30px;
}