<view wx:if="{{showCommentPopup}}" class="popup">
  <view class="popup-inner">
    <view class="popup-header">发表评论</view>
    <view class="input-group">
      <text>姓名:</text>
      <input bindinput="inputName" value="{{newComment.author}}" />
    </view>
    <view class="input-group">
      <text>意见:</text>
      <textarea bindinput="inputComment" value="{{newComment.text}}" placeholder="请输入您的评论" class="input-field" style="border:1px solid #ccc"></textarea>
    </view>
    <view class="button-group">
      <button bindtap="addComment" class="btn-submit">发表评论</button>
      <button bindtap="closeCommentPopup" class="btn-cancel">取消</button>
    </view>
  </view>
</view>
</view>
