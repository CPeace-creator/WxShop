<!-- index.wxml -->
<view class="container">
    <view style="border-bottom: 1px solid black;width: 100%;display: flex; justify-content: space-between;">
        <view style="margin-right: 200px;">精选留言</view>
        <image bindtap="openCommentPopup" class="i" src="/static/comment.png"></image>
    </view>
<!-- 修改后的评论区列表样式 -->
<view class="comment-list">
  <block wx:for="{{comments}}" wx:key="index">
    <view class="comment-item">
      <view class="comment-content">{{item.author}}: {{item.text}}</view>
      <image src="/static/images/my/my.jpg" mode="" class="avatar"/>
    </view>
  </block>
</view>

